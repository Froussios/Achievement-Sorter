{
  // Required
  "manifest_version": 2,
  "name": "Steam Achievements",
  "version": "0.0.1",

  // Recommended
  "description": "Filter achievements",

  // Optional
  "author": "Froussios",
  
  "content_scripts": [
    {
      "matches": ["http://steamcommunity.com/profiles/*/stats/*?tab=achievements*"],
      "css": ["styles.css"],
      "js": ["jquery-2.1.4.min.js", "achie.user.js"]
    }
  ]
}